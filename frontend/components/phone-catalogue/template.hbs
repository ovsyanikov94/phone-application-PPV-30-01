<ul class="phones">
    {{#each phonesArray as |phone|}}
        <li class="thumbnail"
            data-element="phone"
            data-phone-id="{{phone.id}}"
        >
            <a href="#!/phones/{{phone.id}}" class="thumb">
                <img alt="{{phone.name}}" src="{{phone.imageUrl}}">
            </a>
            <a href="#!/phones/{{phone.id}}">{{phone.name}}</a>
            <p>{{phone.snippet}}</p>
        </li>
    {{/each}}
</ul>